{
	"version": "2.0.0",
	"tasks": [
        {
            "type": "cppbuild",
            "label": "gcc build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++20",
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "${fileDirname}/Display/*.cpp",
                "${fileDirname}/ImGui/*.cpp",
                "${fileDirname}/Tools/*.cpp",
                "${fileDirname}/Gameboy/*.cpp",
                "${fileDirname}/Gameboy/Bus/*.cpp",
                "${fileDirname}/Gameboy/Cartridge/*.cpp",
                "${fileDirname}/Gameboy/CPU/*.cpp",
                "${fileDirname}/Gameboy/PPU/*.cpp",
                "${fileDirname}/Gameboy/Utils/*.cpp",
                "/home/offtkp/CppData/glad/src/glad.c",
                "-pthread",
                "-ldl",
                "-lSDL2",
                "-ltbb",
                "-Dlinux",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-I/home/offtkp/CppData/glad/include/",
                "-I/usr/include/"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: /usr/bin/g++"
        }
    ]
}