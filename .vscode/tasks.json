{
    "version": "2.0.0",
    "command": "g++",
    "args": [
		"-std=c++20",
        "-g",
        "${file}",
		"${fileDirname}/Display/display.cpp",
        "-o",
        "${fileBasenameNoExtension}.exe",
		"-I/home/offtkp/CppData/glad/include",
    ],
    "problemMatcher": { "owner": "cpp", "fileLocation": ["relative", "${workspaceRoot}"], 
    "pattern": { "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$", 
        "file": 1, 
        "line": 2, 
        "column": 3, 
        "severity": 4, 
        "message": 5 } 
		},
		"group": {
			"kind": "build",
			"isDefault": true
		}
}